---
import { Menu, X } from 'lucide-react';
---

<nav class="fixed w-full bg-white/95 backdrop-blur-md shadow-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary-600">
          BOOPER
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          Accueil
        </a>
        <a href="/solutions" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          Solutions
        </a>
        <a href="/customers" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          Customers
        </a>
        <a href="/ressources" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          Ressources
        </a>
        <a href="/actualites" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          Actualités
        </a>
        <a href="/formation" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          Formation
        </a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          À propos
        </a>
        <a href="/contact" class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 font-medium transition-colors">
          Contact
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-primary-600">
          <Menu class="h-6 w-6" />
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          Accueil
        </a>
        <a href="/solutions" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          Solutions
        </a>
        <a href="/customers" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          Customers
        </a>
        <a href="/ressources" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          Ressources
        </a>
        <a href="/actualites" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          Actualités
        </a>
        <a href="/formation" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          Formation
        </a>
        <a href="/about" class="block px-3 py-2 text-gray-700 hover:text-primary-600 font-medium">
          À propos
        </a>
        <a href="/contact" class="block px-3 py-2 bg-primary-600 text-white rounded-lg font-medium ml-3 mr-3 text-center">
          Contact
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>